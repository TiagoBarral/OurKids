<%= link_to 'I am a Co-Parent', families_coparent_path, class: 'btn btn-danger' %>
<%= link_to 'Add a Family', new_family_path, class: 'btn btn-danger' %>

<h3>Your Families:</h3>


<% @families.each do |family| %>
  <p>
    <%= "#{family.parent.first_name} and #{family.coparent.first_name}'s Family" %>
  </p>
<% end %>


<h3>Your Children:</h3>

<% current_user.children.each do |child| %>
  <p>
    <%= child.first_name %>
  </p>
<% end %>
