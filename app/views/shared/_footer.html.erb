<footer>
  <ul id="footerlist">
    <li><a href="/families"><img src="https://img.icons8.com/ios/50/000000/home.png"></img></a></li>

    <% if params[:id].nil? && params[:family_id].nil? %>
      <li style="opacity: 0.3;">
        <img src="https://img.icons8.com/ios/50/000000/calendar.png"></img>
      </li>
    <% else %>
      <% if params[:family_id] != nil %>
        <li>
          <%= link_to family_expenses_path(Family.find(params[:family_id])) do %>
            <img src="https://img.icons8.com/ios/50/000000/calendar.png"></img>
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to family_expenses_path(Family.find(params[:id])) do %>
            <img src="https://img.icons8.com/ios/50/000000/calendar.png"></img>
          <% end %>
        </li>
      <% end %>
    <% end %>
    <li><a href="/expenses/new"><img src="https://img.icons8.com/ios/50/000000/plus-filled.png"></img></a></li>

    <li>
      <%= link_to "#newTag", data: { toggle: "modal" } do %>
